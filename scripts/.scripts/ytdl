#/bin/bash
URL=$1

# Get available formats
yt-dlp --list-formats $1

# Get input from the user
echo "Please enter the resolution: "
read RESOLUTION

# Download the video
# yt-dlp -S res:$RESOLUTION --sub-langs "en.*" --write-auto-subs --embed-subs --embed-chapters $URL
yt-dlp -S res:$RESOLUTION --embed-chapters $URL
